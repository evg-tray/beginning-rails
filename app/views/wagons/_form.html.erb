<%= form_for(wagon) do |f| %>
    <%= render 'common/errors', resource: wagon %>

    <div class="field">
      <%= f.label :serial_number, 'Серийный номер' %>
      <%= f.text_field :serial_number %>
    </div>
    <div class="field">
      <%= f.label :wagon_type, 'Тип вагона' %>
      <%= f.collection_select :wagon_type_id, WagonType.all, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :train, 'Поезд' %>
      <%= f.collection_select :train_id, Train.all, :id, :number, :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :top_seats, 'Количество верхних мест' %>
      <%= f.text_field :top_seats %>
    </div>
    <div class="field">
      <%= f.label :bottom_seats, 'Количество нижних мест' %>
      <%= f.text_field :bottom_seats %>
    </div>
    <div class="actions">
      <%= f.submit "#{wagon.new_record? ? 'Создать' : 'Изменить'}" %>
    </div>
<% end %>