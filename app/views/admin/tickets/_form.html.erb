<strong>Номер поезда:</strong>
<%= ticket.train ? ticket.train.number : 'не указан' %>
<br>
<strong>Станция отправления:</strong>
<%= ticket.start_station ? ticket.start_station.title : 'не указана' %>
<br>
<strong>Станция прибытия:</strong>
<%= ticket.end_station ? ticket.end_station.title : 'не указана' %>
<br>
<%= form_for([:admin, ticket]) do |f| %>
    <%= f.label :user_id, 'Пользователь' %>
    <%= f.collection_select :user_id, User.all, :id, :name %>
    <%= f.label :fio, 'ФИО' %>
    <%= f.text_field :fio %>
    <%= f.label :passport, 'Пасспорт' %>
    <%= f.text_field :passport %>
    <%= f.hidden_field :train_id %>
    <%= f.hidden_field :start_station_id %>
    <%= f.hidden_field :end_station_id %>
    <%= f.submit ticket.new_record? ? 'Купить' : 'Изменить' %>
<% end %>