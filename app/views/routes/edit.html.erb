<h1>Изменить маршрут</h1>

<%= form_for(@route) do |f| %>
  <% if @route.errors.any? %>
    <%= render 'errors' %>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit 'Изменить' %>
  </div>
<% end %>

<%= link_to 'Назад', routes_path %>
