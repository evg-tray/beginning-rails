<%= form_for(train) do |f| %>
    <%= render 'common/errors', resource: train %>

  <div class="field">
    <%= f.label :number, 'Номер' %>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :route, 'Маршрут' %>
    <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :order_from_head, 'Сортировать с головы поезда' %>
    <%= f.check_box :order_from_head %>
  </div>
  <div class="actions">
    <%= f.submit "#{train.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>
